{
	"name": "graphrag-dev",
	"context": "..",
	"dockerComposeFile": "../docker-compose.yml",
	"service": "app",
	"workspaceFolder": "/workspace",
	"mounts": [
		"source=${localWorkspaceFolder},target=/workspace,type=bind"
	],
	"settings": {
		"terminal.integrated.defaultProfile.linux": "bash"
	},
	"postCreateCommand": "cd app && poetry install --no-root && poetry run python -m ipykernel install --user --name=graphrag --display-name 'Python (graphrag)'",
	"containerEnv": {
		"FUSEKI_HOST": "fuseki",
		"FUSEKI_PORT": "3030",
		"FUSEKI_ENDPOINT": "office",
		"OLLAMA_HOST": "ollama",
		"OLLAMA_PORT": "11434",
		"OLLAMA_MODEL": "llama3.2:1b"
	},
	"overrideCommand": false,
	"extensions": [
		// Python core
		"ms-python.python",
		"ms-python.vscode-pylance",
		"ms-toolsai.jupyter",
		// Formatting & linting (if desired)
		"ms-python.black-formatter", // Black auto-formatter
		"ms-python.flake8", // Optional: Flake8 linter (lightweight)
		"charliermarsh.ruff", // âš¡ Very fast linter/formatter alternative (Ruff)
		// Dev containers & Docker
		"ms-vscode-remote.remote-containers", // Already installed if you're using Dev Containers
		"ms-azuretools.vscode-docker", // Dockerfile, compose, and container support
		// Git and markdown (optional)
		"eamodio.gitlens", // Powerful Git UI, blame, and history
		"yzhang.markdown-all-in-one" // Great Markdown experience
	],
	"runServices": [
		"fuseki",
		"ollama"
	],
	"shutdownAction": "stopCompose",
	"remoteEnv": {
		"BASH_ENV": "/workspace/.devcontainer/.bashrc"
	}
}